<% if @user.id == @activity.user_id.to_s %>
  <div id="nav_bar">
    <%= render partial: "shared/navbar.html.erb" %>
  </div>
    <br>
  <div class="container">
    <div id="header">
      <h1><%= @activity.brewery_name %> on <%= @activity.created_at %>
    </div>
      <br>
    <div id="activity_info">
      <ul>
        <li>Calories Burned: <%= @activity.calories %></li>
        <li>Distance Traveled: <%= @activity.distance %> miles</li>
        <li>Gas Money Saved: $<%= @activity.dollars_saved %></li>
        <li>Drink Type: <%= @activity.drink_type %></li>
        <li>Carbon Footprint Offset: <%= @activity.lbs_carbon_saved %> lbs of carbon</li>
      </ul>
    </div>
  </div>
<% else %>
  <div align="center">
    <h1>Activity Show Page</h1>
  </div>
    <br>
  <div id="nav_bar">
    <%= render partial: "shared/navbar.html.erb" %>
  </div>
    <br>
  <h2>You do not have access to this activity</h2>
<% end %>
